generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  auth0Id   String    @unique
  email     String    @unique
  name      String?
  username  String?
  bio       String?
  website   String?
  avatarUrl String?
  projects  Project[]
  sharedProjects ProjectCollaborator[]
  sentRequests     CollaborationRequest[] @relation("SentRequests")
  receivedRequests CollaborationRequest[] @relation("ReceivedRequests")
  notifications    Notification[]
  snapshots        Snapshot[]             @relation("Snapshots")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  replId    String   @unique
  language  String
  visibility String  @default("private")
  forkedFromReplId String?
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  collaborators ProjectCollaborator[]
  collaborationRequests CollaborationRequest[]
  snapshots  Snapshot[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectCollaborator {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId String   @db.ObjectId
  userId    String   @db.ObjectId
  project   Project  @relation(fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([projectId, userId])
}

model CollaborationRequest {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id])
  senderId    String   @db.ObjectId
  sender      User     @relation("SentRequests", fields: [senderId], references: [id])
  receiverId  String   @db.ObjectId
  receiver    User     @relation("ReceivedRequests", fields: [receiverId], references: [id])
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([projectId, receiverId])
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  type      String
  message   String
  metadata  String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Snapshot {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId String   @db.ObjectId
  project   Project  @relation(fields: [projectId], references: [id])
  userId    String   @db.ObjectId
  user      User     @relation("Snapshots", fields: [userId], references: [id])
  label     String?
  files     Json
  createdAt DateTime @default(now())
}
